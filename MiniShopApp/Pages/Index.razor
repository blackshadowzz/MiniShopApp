@page "/Index"
@using MiniShopApp.Data.TelegramStore
@rendermode InteractiveServer
@layout EmptyLayout


<PageTitle>Index</PageTitle>
@* <p>Id @userId</p> *@
<div class="">
    @if (userId>0 && userId!=null)
    {
        <div class="text-center">
            <img src="/images/minilogo.jpg" alt="MiniShopApp Logo" class="img-fluid" style="max-width: 200px;" />
            <h1 class="mb-4">Welcome to Mini Order! </h1>
            <p>This is a simple application to demonstrate basic features.</p>
            <p>Use the navigation menu to explore the app.</p>
            <p class="mt-3">Check out the</p>
            <NavLink class="btn btn-secondary mb-2" href="/order/ordering">Check Order</NavLink>
            <p>page to view order.</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning d-flex align-items-center text-center" role="alert">

            <div>
                We couldn't find your information. Please refresh bot by sending command /start again to access the application features. Thank you for your patien!!!
            </div>
        </div>
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    <MudTextField @bind-Value="userId" Label="User ID" Variant="Variant.Outlined" Class="mb-2" />"
    <MudButton OnClick="onCheckOrder">Check Order</MudButton>
</div>
@if (isLoading == true)
{
    <div class="text-center">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </div>
}

