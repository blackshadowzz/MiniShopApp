@page "/table"

@inject IJSRuntime JSRuntime


<h3>TableIndex</h3>


<div>
    <div class="d-flex justify-content-end mb-2">
        <a href="/table/create" class="btn  btn-primary">Create</a>
    </div>
    <table class="table caption-top table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>No</th>
                <th>Table number</th>
                <th>Descriptions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var _data in model)
            {
                <tr>
                    <th>@_data.TableId</th>
                    <th>@_data.TableNumber</th>
                    <th>@_data.Description</th>
                </tr>
            }
        </tbody>
    </table>
</div>




