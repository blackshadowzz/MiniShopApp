<MudDialog>
    <DialogContent>
        <MudForm @ref="form">
            <MudTextField @bind-Value="@model.TableNumber"
                          Label="Table Name"
                          Required="true"
                          Variant="Variant.Outlined" />
            <MudTextField @bind-Value="@model.Description"
                          Label="Description"
                          Lines="5"
                          Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveTable">Save</MudButton>
    </DialogActions>
</MudDialog>
@code{
    MudForm form;
}